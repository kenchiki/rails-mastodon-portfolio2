.form-inputs.nested-fields
  = f.input :image, input_html: { class: 'form-control-file' }
  = f.hidden_field :image_cache
  - if f.object.image?
    %p= image_tag f.object.image.url

  = f.input :position, as: :hidden, input_html: { class: 'js-position' }

  .form-actions
    = link_to_remove_association '削除', f
    = link_to '一つ上へ', '#', class: 'btn btn-outline-primary btn-sm js-up'
    = link_to '一つ下へ', '#', class: 'btn btn-outline-primary btn-sm js-down'
